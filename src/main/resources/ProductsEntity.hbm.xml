<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ecommerce.models.ProductsEntity" table="products" schema="ecommerce">
        <id name="productId">
            <column name="product_id" sql-type="int(11)"/>
        </id>
        <property name="productName">
            <column name="productName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="productDescription">
            <column name="productDescription" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double" precision="-1"/>
        </property>
        <property name="inventory">
            <column name="inventory" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="image">
            <column name="image" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>